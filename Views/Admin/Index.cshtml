@model Portfolio.Models.AdminViewModel

@{
    ViewData["Title"] = "Admin Panel - Yönetim";
}

<div class="container animate-fade" style="max-width: 1000px; margin-top: 5rem; margin-bottom: 5rem;">
    <!-- Proje Ekleme Formu -->
    <div class="card" style="background: var(--glass); border: 1px solid var(--glass-border); padding: 3rem; border-radius: 24px; margin-bottom: 4rem;">
        <h2 class="section-title" style="margin-bottom: 2rem; text-align: left;">Yeni Proje Ekle</h2>
        
        @if (TempData["Success"] != null)
        {
            <div style="background: rgba(34, 197, 94, 0.1); color: #22c55e; padding: 1rem; border-radius: 12px; margin-bottom: 2rem; border: 1px solid rgba(34, 197, 94, 0.2);">
                @TempData["Success"]
            </div>
        }

        <form asp-action="Index" method="post">
            <div class="form-group" style="margin-bottom: 1.5rem;">
                <label class="form-label" style="color: var(--text-muted); margin-bottom: 0.5rem; display: block;">Proje Başlığı</label>
                <input name="Title" required class="form-control" style="width: 100%; background: rgba(0,0,0,0.2); border: 1px solid var(--glass-border); padding: 1rem; border-radius: 12px; color: white;" placeholder="Örn: E-Ticaret Uygulaması" />
            </div>

            <div class="form-group" style="margin-bottom: 1.5rem;">
                <label class="form-label" style="color: var(--text-muted); margin-bottom: 0.5rem; display: block;">Proje Açıklaması</label>
                <textarea name="Description" required class="form-control" rows="4" style="width: 100%; background: rgba(0,0,0,0.2); border: 1px solid var(--glass-border); padding: 1rem; border-radius: 12px; color: white;" placeholder="Projenin detaylarını anlatın..."></textarea>
            </div>

            <div class="form-group" style="margin-bottom: 1.5rem;">
                <label class="form-label" style="color: var(--text-muted); margin-bottom: 0.5rem; display: block;">Görsel URL (İsteğe bağlı)</label>
                <input name="ImageUrl" class="form-control" style="width: 100%; background: rgba(0,0,0,0.2); border: 1px solid var(--glass-border); padding: 1rem; border-radius: 12px; color: white;" placeholder="https://..." />
            </div>

            <div class="form-group" style="margin-bottom: 2.5rem;">
                <label class="form-label" style="color: var(--text-muted); margin-bottom: 0.5rem; display: block;">Proje Linki (GitHub/Canlı Site)</label>
                <input name="ProjectLink" class="form-control" style="width: 100%; background: rgba(0,0,0,0.2); border: 1px solid var(--glass-border); padding: 1rem; border-radius: 12px; color: white;" placeholder="https://github.com/..." />
            </div>

            <button type="submit" class="btn-primary" style="width: 100%; padding: 1rem; cursor: pointer; border: none;">Projeyi Yayınla</button>
        </form>
    </div>

    <!-- Yetenek Ekleme ve Listesi -->
    <div class="card" style="background: var(--glass); border: 1px solid var(--glass-border); padding: 3rem; border-radius: 24px; margin-bottom: 4rem;">
        <h2 class="section-title" style="margin-bottom: 2rem; text-align: left;">Yetenek (Skill) Yönetimi</h2>
        
        <form asp-action="AddSkill" method="post" style="display: flex; gap: 1rem; margin-bottom: 2rem;">
            <input name="tag" required class="form-control" style="flex: 1; background: rgba(0,0,0,0.2); border: 1px solid var(--glass-border); padding: 1rem; border-radius: 12px; color: white;" placeholder="Örn: React, .NET Core, SQL..." />
            <button type="submit" class="btn-primary" style="padding: 0 2rem; cursor: pointer; border: none;">Ekle</button>
        </form>

        <div style="display: flex; flex-wrap: wrap; gap: 0.5rem;">
            @foreach (var skill in Model.Skills)
            {
                <div style="background: rgba(99, 102, 241, 0.1); border: 1px solid rgba(99, 102, 241, 0.2); padding: 0.5rem 1rem; border-radius: 50px; display: flex; align-items: center; gap: 0.5rem;">
                    <span style="color: var(--primary); font-size: 0.9rem;">@skill.Tag</span>
                    <form asp-action="DeleteSkill" method="post" onsubmit="return confirm('Bu yeteneği silmek istediğinize emin misiniz?');">
                        <input type="hidden" name="id" value="@skill.Id" />
                        <button type="submit" style="background: none; border: none; color: #ef4444; cursor: pointer; font-size: 1.2rem; display: flex; align-items: center;">&times;</button>
                    </form>
                </div>
            }
            @if (!Model.Skills.Any())
            {
                <p style="color: var(--text-muted); font-size: 0.9rem;">Henüz yetenek eklenmemiş.</p>
            }
        </div>
    </div>

    <!-- Mevcut Projeler Listesi -->
    <div class="card" style="background: var(--glass); border: 1px solid var(--glass-border); padding: 3rem; border-radius: 24px;">
        <h2 class="section-title" style="margin-bottom: 2rem; text-align: left;">Mevcut Projeler</h2>
        
        <div style="overflow-x: auto;">
            <table style="width: 100%; border-collapse: collapse; color: var(--text-main);">
                <thead>
                    <tr style="border-bottom: 1px solid var(--glass-border); text-align: left;">
                        <th style="padding: 1rem; color: var(--text-muted);">Başlık</th>
                        <th style="padding: 1rem; color: var(--text-muted);">Tarih</th>
                        <th style="padding: 1rem; color: var(--text-muted); text-align: right;">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var project in Model.Projects)
                    {
                        <tr style="border-bottom: 1px solid rgba(255,255,255,0.05);">
                            <td style="padding: 1rem;">@project.Title</td>
                            <td style="padding: 1rem; color: var(--text-muted);">@project.CreatedAt.ToShortDateString()</td>
                            <td style="padding: 1rem; text-align: right; display: flex; gap: 0.5rem; justify-content: flex-end;">
                                <a asp-action="Edit" asp-route-id="@project.Id" style="background: rgba(99, 102, 241, 0.1); color: var(--primary); border: 1px solid rgba(99, 102, 241, 0.2); padding: 0.5rem 1rem; border-radius: 8px; cursor: pointer; text-decoration: none; transition: all 0.3s ease; font-size: 0.9rem;">Düzenle</a>
                                <form asp-action="Delete" method="post" onsubmit="return confirm('Bu projeyi silmek istediğinize emin misiniz?');" style="display: inline;">
                                    <input type="hidden" name="id" value="@project.Id" />
                                    <button type="submit" style="background: rgba(239, 68, 68, 0.1); color: #ef4444; border: 1px solid rgba(239, 68, 68, 0.2); padding: 0.5rem 1rem; border-radius: 8px; cursor: pointer; transition: all 0.3s ease; font-size: 0.9rem;">Sil</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        @if (!Model.Projects.Any())
        {
            <p style="text-align: center; color: var(--text-muted); margin-top: 2rem;">Henüz hiç proje eklenmemiş.</p>
        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
