@model Portfolio.Models.AdminViewModel

@{
    ViewData["Title"] = "Admin Panel - Management";
}

<div class="container animate-fade" style="max-width: 1000px; margin-top: 5rem; margin-bottom: 5rem;">
    <!-- Project Management Form -->
    <div class="card" style="background: var(--glass); border: 1px solid var(--glass-border); padding: 3rem; border-radius: 24px; margin-bottom: 4rem;">
        <h2 class="section-title" style="margin-bottom: 2rem; text-align: left;">Add New Project</h2>
        
        @if (TempData["Success"] != null)
        {
            <div style="background: rgba(34, 197, 94, 0.1); color: #22c55e; padding: 1rem; border-radius: 12px; margin-bottom: 2rem; border: 1px solid rgba(34, 197, 94, 0.2);">
                @TempData["Success"]
            </div>
        }

        <form asp-action="Index" method="post">
            <div asp-validation-summary="All" style="color: #ef4444; margin-bottom: 1.5rem; list-style: none; padding: 0.5rem; background: rgba(239, 68, 68, 0.1); border-radius: 8px;"></div>
            
            <div class="form-group" style="margin-bottom: 1.5rem;">
                <label class="form-label" style="color: var(--text-muted); margin-bottom: 0.5rem; display: block;">Project Title</label>
                <input name="Title" required class="form-control" style="width: 100%; background: rgba(0,0,0,0.2); border: 1px solid var(--glass-border); padding: 1rem; border-radius: 12px; color: white;" placeholder="e.g. E-Commerce Application" />
            </div>

            <div class="form-group" style="margin-bottom: 1.5rem;">
                <label class="form-label" style="color: var(--text-muted); margin-bottom: 0.5rem; display: block;">Project Description (Optional)</label>
                <textarea name="Description" class="form-control" rows="4" style="width: 100%; background: rgba(0,0,0,0.2); border: 1px solid var(--glass-border); padding: 1rem; border-radius: 12px; color: white;" placeholder="Describe the project details..."></textarea>
            </div>

            <div class="form-group" style="margin-bottom: 1.5rem;">
                <label class="form-label" style="color: var(--text-muted); margin-bottom: 0.5rem; display: block;">Image URL (Optional)</label>
                <input name="ImageUrl" class="form-control" style="width: 100%; background: rgba(0,0,0,0.2); border: 1px solid var(--glass-border); padding: 1rem; border-radius: 12px; color: white;" placeholder="https://..." />
            </div>

            <div class="form-group" style="margin-bottom: 2.5rem;">
                <label class="form-label" style="color: var(--text-muted); margin-bottom: 0.5rem; display: block;">Project Link (GitHub/Live Site)</label>
                <input name="ProjectLink" class="form-control" style="width: 100%; background: rgba(0,0,0,0.2); border: 1px solid var(--glass-border); padding: 1rem; border-radius: 12px; color: white;" placeholder="https://github.com/..." />
            </div>

            <button type="submit" class="btn-primary" style="width: 100%; padding: 1rem; cursor: pointer; border: none;">Publish Project</button>
        </form>
    </div>

    <!-- Current Projects Table -->
    <div class="card" style="background: var(--glass); border: 1px solid var(--glass-border); padding: 3rem; border-radius: 24px;">
        <h2 class="section-title" style="margin-bottom: 2rem; text-align: left;">Current Projects</h2>
        
        <div style="overflow-x: auto;">
            <table style="width: 100%; border-collapse: collapse; color: var(--text-main);">
                <thead>
                    <tr style="border-bottom: 1px solid var(--glass-border); text-align: left;">
                        <th style="padding: 1rem; color: var(--text-muted);">Title</th>
                        <th style="padding: 1rem; color: var(--text-muted);">Date</th>
                        <th style="padding: 1rem; color: var(--text-muted); text-align: right;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var project in Model.Projects)
                    {
                        <tr style="border-bottom: 1px solid rgba(255,255,255,0.05);">
                            <td style="padding: 1rem;">@project.Title</td>
                            <td style="padding: 1rem; color: var(--text-muted);">@project.CreatedAt.ToShortDateString()</td>
                            <td style="padding: 1rem; text-align: right; display: flex; gap: 0.5rem; justify-content: flex-end;">
                                <a asp-action="Edit" asp-route-id="@project.Id" style="background: rgba(99, 102, 241, 0.1); color: var(--primary); border: 1px solid rgba(99, 102, 241, 0.2); padding: 0.5rem 1rem; border-radius: 8px; cursor: pointer; text-decoration: none; transition: all 0.3s ease; font-size: 0.9rem;">Edit</a>
                                <form asp-action="Delete" method="post" onsubmit="return confirm('Are you sure you want to delete this project?');" style="display: inline;">
                                    <input type="hidden" name="id" value="@project.Id" />
                                    <button type="submit" style="background: rgba(239, 68, 68, 0.1); color: #ef4444; border: 1px solid rgba(239, 68, 68, 0.2); padding: 0.5rem 1rem; border-radius: 8px; cursor: pointer; transition: all 0.3s ease; font-size: 0.9rem;">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        @if (!Model.Projects.Any())
        {
            <p style="text-align: center; color: var(--text-muted); margin-top: 2rem;">No projects published yet.</p>
        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
