@model Portfolio.Models.ContactForm
@{
    ViewData["Title"] = "Contact";
}

<section class="container animate-fade">
    <h1 class="section-title">Get In Touch</h1>
    <p style="text-align: center; color: var(--text-muted); margin-bottom: 4rem; max-width: 600px; margin-left: auto; margin-right: auto;">
        Want to talk about your project? Or just want to say "hello"? You can reach me through the form.
    </p>

    <div class="contact-form">
        @if (TempData["Success"] != null)
        {
            <div style="background: rgba(34, 197, 94, 0.1); color: #22c55e; padding: 1.5rem; border-radius: 12px; margin-bottom: 2rem; border: 1px solid rgba(34, 197, 94, 0.2); text-align: center;">
                @TempData["Success"]
            </div>
        }

        <div asp-validation-summary="ModelOnly" style="color: #ef4444; margin-bottom: 1rem; text-align: center;"></div>

        <form asp-action="Index" method="POST">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label asp-for="Name" class="form-label">Your Name</label>
                <input asp-for="Name" class="form-control" placeholder="Full Name" required>
                <span asp-validation-for="Name" style="color: #ef4444; font-size: 0.8rem;"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="form-label">Your Email</label>
                <input asp-for="Email" class="form-control" placeholder="example@mail.com" required>
                <span asp-validation-for="Email" style="color: #ef4444; font-size: 0.8rem;"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message" class="form-label">Your Message</label>
                <textarea asp-for="Message" class="form-control" rows="5" placeholder="How can I help you?" required></textarea>
                <span asp-validation-for="Message" style="color: #ef4444; font-size: 0.8rem;"></span>
            </div>
            <button type="submit" class="btn-primary" style="width: 100%; cursor: pointer;">Send Message</button>
        </form>
    </div>

    <div style="margin-top: 4rem; text-align: center;">
        <p style="color: var(--text-muted); margin-bottom: 2rem;">Find me on Social Media:</p>
        <div class="social-buttons">
            <a href="https://www.linkedin.com/in/beytullah-cakir/" class="social-btn linkedin" target="_blank">
                <i class="fab fa-linkedin-in"></i>
                <span>LinkedIn</span>
            </a>
            <a href="https://github.com/beytullah-cakir" class="social-btn github" target="_blank">
                <i class="fab fa-github"></i>
                <span>GitHub</span>
            </a>
            <a href="https://www.instagram.com/beytullahhcakir/" class="social-btn instagram" target="_blank">
                <i class="fab fa-instagram"></i>
                <span>Instagram</span>
            </a>             
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
