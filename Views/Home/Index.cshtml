@{
    ViewData["Title"] = "Welcome";
}

<div class="hero animate-fade">
    <div class="profile-section" style="margin-bottom: 2rem;">
        <div class="profile-img-container">
            <img src="~/images/profile-img.jpeg" alt="Beytullah" class="profile-img" />
        </div>
        <h1 class="hero-title">Beytullah Çakır</h1>
        <p class="hero-subtitle" style="color: var(--primary); font-weight: 700; margin-bottom: 0.5rem;">Game & Software Developer</p>
    </div>
    
    <div class="hero-actions">
        <a asp-controller="Projects" asp-action="Index" class="btn-primary">View My Projects</a>
        <a asp-controller="Contact" asp-action="Index" class="btn-secondary">Let's Work Together</a>
    </div>
</div>

<section class="container animate-fade" style="animation-delay: 0.3s;">
    <h2 class="section-title">What I Do</h2>
    <div class="project-grid">
        <div class="card">
            <div style="font-size: 2.5rem; margin-bottom: 1rem;">🎮</div>
            <h3>Game Development</h3>
            <p class="card-text">
                Developing performance-oriented, scalable, and stable game mechanics using Unity. 
                I prioritize clean code principles and sustainable architecture.
            </p>
        </div>

        <div class="card">
            <div style="font-size: 2.5rem; margin-bottom: 1rem;">🐍</div>
            <h3>Backend Development</h3>
            <p class="card-text">
                Developing secure, performant, and RESTful backend services using Python and ASP.NET Core. 
                Working on API design, database integration, and scalable architectures.
            </p>
        </div>

        <div class="card">
            <div style="font-size: 2.5rem; margin-bottom: 1rem;">🤖</div>
            <h3>Machine Learning & Data Analysis</h3>
            <p class="card-text">
                Analyzing data using machine learning techniques to identify patterns and extract meaningful insights.
                Working on data preprocessing, exploratory analysis, and basic model building to support data-driven decisions.
            </p>
        </div>

    </div>

</section>

<style>
    .profile-img-container {
        width: clamp(150px, 40vw, 220px);
        height: clamp(150px, 40vw, 220px);
        margin: 0 auto 1.5rem;
        border-radius: 50%;
        padding: 6px;
        background: linear-gradient(135deg, var(--primary), #a855f7);
        box-shadow: 0 0 40px rgba(99, 102, 241, 0.4);
        position: relative;
    }

    .profile-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 50%;
        border: 4px solid var(--bg-dark);
    }

    .profile-img-container::after {
        content: '';
        position: absolute;
        top: -10px;
        left: -10px;
        right: -10px;
        bottom: -10px;
        border-radius: 50%;
        border: 2px dashed var(--primary);
        opacity: 0.3;
        animation: rotate 20s linear infinite;
        pointer-events: none;
    }

    .hero-actions {
        display: flex;
        gap: 1.2rem;
        justify-content: center;
        width: 100%;
    }

    @@keyframes rotate {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }
</style>
