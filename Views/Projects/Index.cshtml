@model IEnumerable<Portfolio.Models.Project>
@{
    ViewData["Title"] = "My Projects";
}

<section class="container animate-fade">
    <h1 class="section-title">My Projects</h1>
    <div class="project-grid">
        @if (Model != null && Model.Any())
        {
            foreach (var project in Model)
            {
                <div class="card">
                    @if (!string.IsNullOrEmpty(project.ImageUrl))
                    {
                        <div class="card-img" style="background-image: url('@project.ImageUrl'); background-size: cover; background-position: center;"></div>
                    }
                    else
                    {
                        <div class="card-img-placeholder">
                            @{
                                var title = project.Title ?? "PJ";
                                var shortTitle = title.Length >= 2 ? title.Substring(0, 2) : title;
                            }
                            <span class="placeholder-text">@shortTitle.ToUpper()</span>
                        </div>
                    }
                    <h3 class="card-title">@project.Title</h3>
                    @if (!string.IsNullOrEmpty(project.Description))
                    {
                        <p class="card-text">@project.Description</p>
                    }
                    <div style="margin-top: auto;">
                        <a asp-action="Details" asp-route-id="@project.Id" class="btn-primary" style="width: 100%; text-align:center;">View Details</a>
                    </div>
                </div>
            }
        }
        else
        {
            <div style="grid-column: 1 / -1; text-align: center; padding: 4rem; background: var(--glass); border-radius: 20px; border: 1px solid var(--glass-border);">
                <p style="color: var(--text-muted); font-size: 1.2rem;">No projects added yet. You can add your first project from the admin panel.</p>
            </div>
        }
    </div>
</section>
