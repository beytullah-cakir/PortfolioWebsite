@model IEnumerable<Portfolio.Models.Project>
@{
    ViewData["Title"] = "My Project";
}

<section class="container animate-fade">
    <h1 class="section-title">Projelerim</h1>
    <div class="project-grid">
        @if (Model != null && Model.Any())
        {
            foreach (var project in Model)
            {
                <div class="card">
                    @if (!string.IsNullOrEmpty(project.ImageUrl))
                    {
                        <div class="card-img" style="background-image: url('@project.ImageUrl'); background-size: cover; background-position: center;"></div>
                    }
                    else
                    {
                        <div class="card-img" style="background: linear-gradient(135deg, #6366f1, #a855f7); display:flex; align-items:center; justify-content:center; color:white; font-weight:800; font-size:2rem;">
                            @(project.Title?.Substring(0, Math.Min(2, project.Title.Length)).ToUpper() ?? "PJ")
                        </div>
                    }
                    <h3 class="card-title">@project.Title</h3>
                    <p class="card-text">@project.Description</p>
                    <div class="mt-auto">
                        <a asp-action="Details" asp-route-id="@project.Id" class="btn-primary" style="text-decoration: none; display: block; text-align: center; padding: 0.75rem;">Detayları Gör</a>
                    </div>
                </div>
            }
        }
        else
        {
            <div style="grid-column: 1 / -1; text-align: center; padding: 4rem; background: var(--glass); border-radius: 20px; border: 1px solid var(--glass-border);">
                <p style="color: var(--text-muted); font-size: 1.2rem;">Henüz proje eklenmemiş. Admin panelinden ilk projenizi ekleyebilirsiniz.</p>
            </div>
        }
    </div>
</section>
